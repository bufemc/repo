<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.program.doomzdaywizard" name="[B][COLOR gold]Doomzday[/COLOR][/B] Wizard" version="1.2.9" provider-name="DD Team">
    <requires>
        <import addon="xbmc.python" version="2.1.0" />
        <import addon="script.module.requests" />
        <import addon="script.module.six" />
    </requires>

    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
    </extension>

    <extension point="xbmc.service" library="startup.py" start="startup" />

    <extension point="xbmc.addon.metadata">
        <summary lang="en">Doomzday Wizard</summary>
        <description lang="en">Doomzday Wizard gets you access to the latest Doomzday Builds.</description>
        <platform>all</platform>
        <reuselanguageinvoker>false</reuselanguageinvoker>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.png</fanart>
        </assets>
    </extension>
</addon>

<addon id="plugin.video.doom"
	   name="Doom"
	   version="1.0.5"
	   provider-name="DD Team">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
	<import addon="script.module.requests"/>
	<import addon="script.module.python.koding.aio" version="0.9.6.6" />
	<import addon="script.module.resolveurl" version="5.0.00"/>
	<import addon="script.common.plugin.cache" version="2.5.5"/>
	<import addon="script.module.pyxbmct" version="1.1.4" />
	<import addon="script.module.futures" version="2.2.0"/>
	<import addon="script.module.universalscrapers"/>
	<import addon="script.module.beautifulsoup4" version="4.5.3"/>
	<import addon="script.module.feedparser" />
	<import addon="script.module.dateutil" />
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.service" library="service.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="he">Tesing Purposes Only</summary>
    <description lang="he">Forked from Destiny, Thanks to Dark Child for the Orginal Addon and Whoever else may have been involved in the Original Project</description>
    <platform>all</platform>
  </extension>
</addon>

