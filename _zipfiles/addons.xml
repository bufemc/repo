<addons>
<addon id="plugin.program.doomzday19" name="[COLOR orangered]Doomzday 19  [/COLOR]Wizard" version="2.0.1" provider-name="DD Team">
    <requires>
        <import addon="xbmc.python" version="3.0.0" />
        <import addon="script.module.requests" />
        <import addon="script.module.six" />
        <import addon="script.kodi.android.update" optional="true" version="1.3.2" />
    </requires>

    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
    </extension>

    <extension point="xbmc.service" library="startup.py" start="startup" />

    <extension point="xbmc.addon.metadata">
        <summary lang="en">[COLOR orangered]Doomzday 19  [/COLOR]Wizard</summary>
        <description lang="en">[COLOR orangered]Doomzday 19  [/COLOR]Wizard</description>
        <platform>all</platform>
        <reuselanguageinvoker>false</reuselanguageinvoker>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.png</fanart>
        </assets>
    </extension>
</addon>

